
<!DOCTYPE html>
<html lang="en">
    <%- include('./partial/head'); %>
<body>

    <%- include('./partial/header'); %>

    <div class="uk-section uk-section-default">
        <div class="uk-container uk-container-small">
          <div id="result"></div>
        
          <form id="myForm" method="post" action="/karyawan/edit" novalidate>
            <!-- <div class="uk-margin"> -->
              <!-- <label class="uk-form-label">Nomor Induk</label> -->
              <input hidden value="<%= karyawan.nik %>" id="fullname" class="uk-input" type="text" name="nik" required minlength="3" maxlength="60" pattern="^[a-zA-Z ]*$">
              <!-- <span class="uk-text-danger"></span> -->
            <!-- </div> -->
            <!-- <input type="hidden" name="update" value="<%= karyawan.nik %>"> -->

      
            <div class="uk-margin">
              <label class="uk-form-label">Nama</label>
              <input value="<%= karyawan.nama %>" id="nama" class="uk-input" type="text" name="nama" required pattern="^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$">
              <span class="uk-text-danger"></span>
            </div>
            
            <div class="uk-margin">
                <label class="uk-form-label">Alamat</label>
                <input value="<%= karyawan.alamat %>" id="alamat" class="uk-input" type="text" name="alamat" required pattern="^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$">
                <span class="uk-text-danger"></span>
              </div>
            
              <div class="uk-margin">
                <label class="uk-form-label">Tanggal Lahir</label>
                <input value="<%= karyawan.tanggallahir %>" required name="tanggallahir" class="uk-input" type="date" id="uk_dp_1" data-uk-datepicker="{format:'DD/MM/YYYY'}">
                <span class="uk-text-danger"></span>
              </div>


              <div class="uk-margin">
                <label class="uk-form-label">Tanggal Bergabung</label>
                <input value="<%= karyawan.tanggalbergabung %>" required name="tanggalbergabung" class="uk-input" type="date" id="uk_dp_1" data-uk-datepicker="{format:'DD/MM/YYYY'}">
                <span class="uk-text-danger"></span>
              </div>
          
            <button class="uk-button uk-button-secondary" type="submit">Ubah</button>
            </form>
          
        </div> 
      </div> 

</body>
</html>

